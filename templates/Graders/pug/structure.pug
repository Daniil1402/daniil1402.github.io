                span.structureItem__text Вокал
            a(href="#").structureItem
                .structureItem__img
                    img(src="assets/img/str3.png", alt="")
                span.structureItem__title РУСЛАН АСАФОВ
                span.structureItem__text Ударные
            a(href="#").structureItem
                .structureItem__img
                    img(src="assets/img/str4.png", alt="")
